<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose|%>
<h3><%= dose.description %></h3>
<ul>
  <li><%= dose.ingredient.name %></li>
  </ul>
  <%= link_to "Delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" }, class: "btn btn-warning" %>
<% end %>
<p></p>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: "btn btn-secondary"%>
<%= link_to 'Edit', edit_cocktail_path(@cocktail), class: "btn btn-secondary"%>
<%= link_to 'Back', cocktails_path, class: "btn btn-secondary"%>



