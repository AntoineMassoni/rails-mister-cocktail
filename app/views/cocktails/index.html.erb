<%= render 'components/navbar' %>
<div>
  <%= render 'components/banner' %>
  <h1 class="text-center mt-2 m-0 text-align-center">Cocktails</h1>
</div>

<div class="row">
<% @cocktails.each do |cocktail| %>
<div class="col-sm-12 col-md-6 col-lg-4 mt-3 mb-5 " >
 <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.photo %>)">
   <%= link_to cocktail.name, cocktail_path(cocktail)%>
 </div>
</div>
<% end %>
</div>




